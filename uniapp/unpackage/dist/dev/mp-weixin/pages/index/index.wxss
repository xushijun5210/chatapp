.status_bar{
	height: 25px;
	background: rgba(255,255,255,0.96);
	width: 100%;
	z-index: 1001;
	position: fixed;
}
.top-bar{
	position: fixed;
	z-index: 1001;
	top:25px;
	width: 100%;
	overflow: hidden;/* 清除浮动 */
	height: 88rpx;
	background: rgba(255,255,255,0.96);
	box-shadow: 0px 1px 0px rgba(0,0,0,0.1);
}
